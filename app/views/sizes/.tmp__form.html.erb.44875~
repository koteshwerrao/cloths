<%= form_for([@product,@size]) do |f| %>
<% if @size.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@size.errors.count, "error") %> prohibited this size from being saved:</h2>
    <ul>
    <% @size.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>